<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
       <ImageView
           android:layout_margin="7dp"
           android:layout_width="60dp"
           android:layout_height="match_parent"
          android:src="@mipmap/yinpin"
           android:layout_gravity="center"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <ImageView
               android:id="@+id/recommed_search"
               android:layout_margin="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ahlib_nav_icon_search_p"
               android:layout_alignParentRight="true"/>

       </RelativeLayout>


    </LinearLayout>
    <!--<com.handmark.pulltorefresh.library.PullToRefreshListView-->
        <!--android:id="@+id/Refresh_headline"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f2f1f1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >



            <android.support.design.widget.TabLayout
            android:id="@+id/allrecommed_tb"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:tabMode="scrollable"
            app:tabIndicatorColor="#0a0707">

        </android.support.design.widget.TabLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/one"
                android:padding="3dp"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

         <TextView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#f2f1f1"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/allrecommed_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </android.support.v4.view.ViewPager>
        </FrameLayout>
    </LinearLayout>






</LinearLayout>