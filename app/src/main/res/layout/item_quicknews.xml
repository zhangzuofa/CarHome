<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_quicknews_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="20sp"
            />
        <ImageView
            android:id="@+id/item_quicknews_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/shipin3"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1">
        <TextView
            android:id="@+id/item_quicknews_play_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播报状态"
            android:textSize="10sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_quicknews_listsener_tv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="听众"
            android:textSize="10sp"
           android:layout_toRightOf="@+id/item_quicknews_play_tv"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/item_quicknews_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</LinearLayout>