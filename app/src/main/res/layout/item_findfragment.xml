<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/item_fragment_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/nav_icon_article_f"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_fragment_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="标题"/>
        <TextView
            android:id="@+id/item_fragment_adinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是首付"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="10sp"/>
        <LinearLayout
           android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/item_fragment_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#f18709"
                android:text="现在价格"/>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/item_fragment_tv_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老价格"
                    android:textSize="9sp"
                    />
               <TextView
                   android:layout_width="25dp"
                   android:layout_height="2dp"
                   android:background="#ffff34"
                   android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>